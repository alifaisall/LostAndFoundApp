<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AccountFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/myCard"
        android:layout_width="334dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#ECF0F1"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccount3">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="117dp"
            android:layout_height="124dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="25dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/bag" />

        <TextView
            android:id="@+id/tvTitleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/poppins_semibold_font"
            android:text="Bag"
            android:textColor="#3A3E59"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDescriptionCard"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/poppins_light"
            android:text="i found this bag lorem"
            android:textColor="#3A3E59"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvLocationCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:drawableLeft="@drawable/ic_card_location"
            android:drawablePadding="2dp"
            android:fontFamily="@font/poppins_regular_font"
            android:paddingLeft="-3dp"
            android:text="Sulaymaniyah"
            android:textColor="#3A3E59"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvAccount3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="top"
        android:text="My Post"
        android:textColor="#3A3E59"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogOut2" />

    <TextView
        android:id="@+id/tvPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="+498088077655"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail2" />

    <TextView
        android:id="@+id/tvAccount4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_font"
        android:gravity="top"
        android:text="Account"
        android:textColor="#3A3E59"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="Albert Einstein"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccount4" />

    <TextView
        android:id="@+id/tvEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="AlbertEinstein@gmail.com"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName2" />

    <Button
        android:id="@+id/btnLogOut2"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_add_btn"
        android:fontFamily="@font/poppins_semibold_font"
        android:text="LOG OUT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhone2"
        tools:ignore="TouchTargetSizeCheck" />
</android.support.constraint.ConstraintLayout>