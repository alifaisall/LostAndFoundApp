<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignUpFragment">

    <TextView
        android:id="@+id/login3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_font"
        android:gravity="top"
        android:text="Create Account"
        android:textColor="#3A3E59"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edEmailSignUp2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@drawable/ed_line_color_selected"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingBottom="20dp"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edNameSignUp2"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edPassSignUp2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@drawable/ed_line_color_selected"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPhoneSignUp2"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnSignUp2"
        android:layout_width="162dp"
        android:layout_height="52dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/poppins_semibold_font"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edPassSignUp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPassSignUp2" />

    <TextView
        android:id="@+id/tvSignIn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/poppins_regular_font"
        android:onClick="showLogin"
        android:text="Sign In"
        android:textColor="#3A3E59"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/poppins_regular_font"
        android:text="Already have an account?"
        android:textColor="#99000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSignIn"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edNameSignUp2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="@drawable/ed_line_color_selected"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login3" />

    <EditText
        android:id="@+id/edPhoneSignUp2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@drawable/ed_line_color_selected"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="16dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular_font"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingBottom="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edEmailSignUp2" />

    <ImageView
        android:id="@+id/backArrow3"
        android:layout_width="61dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:onClick="backToMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
</android.support.constraint.ConstraintLayout>